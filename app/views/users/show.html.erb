<div class="show-page">
  <h3> My Itineraries</h3>
    <% if !@user.itineraries %>
      <section class="my-itineraries">
        <p>You currently haven't created any itineraries</p>
        <div class="button"> <a class= "btn-primary" href="<%= new_itinerary_path %>">Create New</a></div>
      </section>
    <% else %>
      <section class="my-itineraries">
        <% @user.itineraries.each do |itinerary| %>
          <div class="itinerary">
            <h4><%= itinerary.title %></h4>
            <img src="<%= asset_path("airplane-img.jpg")%>">

            <p><%= itinerary.description %></p>
            <p>Budget: $<%= itinerary.budget %></p>
            <div class="buttons">
              <a class= "btn-primary" href="<%= itinerary_path(itinerary) %>">View</a>
              <a class= "btn-primary" href="<%= edit_itinerary_path %>">Edit</a>
            </div>
          </div>
        <% end %>
        <div class="button"> <a class= "btn-primary" href="<%= new_itinerary_path %>">Create New</a></div>
      </section>
    <% end %>

  <h3> My Library </h3>
    <!-- Liked Itineraries -->
    <% if true %>
      <p>You have nothing in your Library. Browse and like itineraries to save them here.</p>
    <% else %>
      <div class="itinerary">
      </div>
    <% end %>
</div>
